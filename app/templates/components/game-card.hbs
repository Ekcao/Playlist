{{#paper-card as |card|}}
    {{card.image size="sm" src=game.image.small_url alt=game.name title=game.name}} 
    {{#card.header as |header|}}
        {{#header.text as |text|}}
            {{#text.title}}{{game.name}}{{/text.title}}
            <div></div>
            {{#text.subhead}}{{game.developers.0.name}}{{/text.subhead}}
        {{/header.text}}
    {{/card.header}}
    {{#card.actions}}
        {{#paper-button class="btn-mark-done" onClick=(action markDone game) iconButton=true}}
            {{paper-icon "done"}}
        {{/paper-button}}
        {{#paper-button class="btn-remove" iconButton=true}}
            {{paper-icon "delete"}}
        {{/paper-button}}
    {{/card.actions}}
{{/paper-card}}
