{{app-toolbar signOut=(action "signOut") 
    searchGames=(perform searchGamesTask)
    showGame=(action "showGame")}}
{{#paper-sidenav-container class="app-container"}}
    {{#paper-sidenav 
        class="app-sidenav flex-gt-sm-15"
        open=sidenavOpen
        onToggle=(action (mut sidenavOpen))
        name="sidenav"}}
        {{#paper-list class="app-sidenav-menu-item"}}
            {{#link-to "games" (query-params isDone=null)}}
                {{#paper-item}}{{paper-icon "play arrow"}} All Games{{/paper-item}}
            {{/link-to}}
            {{#link-to "games" (query-params isDone=false)}}
                {{#paper-item}}{{paper-icon "watch later"}} Remaining{{/paper-item}}
            {{/link-to}}
            {{#link-to "games" (query-params isDone=true)}}
                {{#paper-item}}{{paper-icon "done"}} Done{{/paper-item}}
            {{/link-to}}
        {{/paper-list}}
    {{/paper-sidenav}}

    {{#paper-content flex=true scroll-y=true class="app-body flex"}}
        {{outlet}}
    {{/paper-content}}
{{/paper-sidenav-container}}
